@model Company_System.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">Department Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">ID</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4 font-weight-bold">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4 font-weight-bold">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>

                    <div class="text-right mt-4">
                        @Html.ActionLink("Back to List", "Index", "Department", new { area = "HR" }, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
